pipeline {
    agent any

     triggers {
        cron('H 8 * * *')  // Tous les jours à 08h00 (heure aléatoire pour éviter les conflits)
    }

    tools {
        maven 'Maven 3.9.9'
        jdk 'JDK 21'
    }

    stages {
        stage('Checkout') {
            steps {
                git 'https://github.com/KhaoulaEsi22/Ing-log.git'
            }
        }

        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }
    }

    post {
        success {
            echo '✅ Build successful!'
        }
        failure {
            echo '❌ Build failed!'
            mail to: 'tonemail@gmail.com',
                 subject: "❌ Build échoué - Hospitalisation Manager",
                 body: "Le build Jenkins a échoué. Merci de vérifier le code ou les tests."
        }
    }
}

